@model System.Data.DataTable 
@using System.Data; 

<h2>Table Data</h2> 
<p>
    @Html.ActionLink("Export", "ExportCSV", new { id = WebSecurity.CurrentUserId, tableId =  ViewBag.tableId})
</p>
<table> 
    <thead> 
    <tr> 
    @foreach (DataColumn col in Model.Columns)     
    {          
        <th>@col.ColumnName</th> 
    }     
    </tr> 
    </thead>         
    <tbody> 
    @foreach (DataRow row in Model.Rows)     
    {         
        <tr> 
        @foreach (DataColumn col in Model.Columns)         
        {              
            <td>@row[col.ColumnName]</td> 
        }         
        </tr> 
    }     
    </tbody> 
</table>


           
